<form method="post">
  <div class="form-group">
    <label for="exampleFormControlInput1">Nombre:</label>
    <input type="text" class="form-control" name="nombre" value={{{datos.nombre}}}>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Ingredientes:</label>
    <textarea class="form-control" name="instrucciones" rows="4">{{{datos.ingredientes}}}</textarea>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Instrucciones:</label>
    <textarea class="form-control" name="recetas" rows="4">{{{datos.instrucciones}}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary">Enviar</button>
  
</form>